{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "#providers/*": [
        "src/providers/*"
      ],
      "#ui/*": [
        "src/ui/*"
      ],
      "#styles/*": [
        "src/styles/*"
      ],
      "#utils/*": [
        "src/utils/*"
      ],
      "#helpers/*": [
        "src/helpers/*"
      ],
      "#hooks/*": [
        "src/hooks/*"
      ],
    }
  },
  "include": [
    "src",
    "mocks",
    ".eslintrc.cjs",
    "*.config.ts",
    "*.config.js",
    "*.config.cjs"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
