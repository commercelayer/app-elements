{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "#core-app-elements/*": [
        "../core-app-elements/src/ui/*"
      ],
      "#app-elements-hook-form/*": [
        "../app-elements-hook-form/src/components/*"
      ],
      "@commercelayer/core-app-elements/dist/*": [
        // required to properly resolve `core-app-elements` types imported in `app-elements-hook-form` components 
        "node_modules/@commercelayer/core-app-elements/dist/*"
      ],
    }
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "*.config.ts",
    "*.config.js"
  ]
}
