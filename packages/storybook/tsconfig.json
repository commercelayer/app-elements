{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      // main package
      "#core-app-elements/*": [
        "../core-app-elements/src/ui/*"
      ],
      // reference for internal package resolution
      "#ui/*": [
        "../core-app-elements/src/ui/*"
      ],
      "#styles/*": [
        "../core-app-elements/src/styles/*"
      ],
      "#utils/*": [
        "../core-app-elements/src/utils/*"
      ],
      "#helpers/*": [
        "../core-app-elements/src/helpers/*"
      ],
    }
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "*.config.ts",
    "*.config.js"
  ]
}
